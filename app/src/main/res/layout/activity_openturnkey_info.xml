<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light"
        app:title="@string/openturnkey_information" />

    <ImageView
        android:id="@+id/lock_state"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/lock_state"
        app:layout_constraintBottom_toBottomOf="@+id/power_state"
        app:layout_constraintEnd_toStartOf="@+id/power_state"
        app:layout_constraintTop_toTopOf="@+id/power_state"
        app:srcCompat="@drawable/ic_lock_open_black_24dp" />

    <ImageView
        android:id="@+id/power_state"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/battery_state"
        android:rotation="270"
        app:layout_constraintBottom_toBottomOf="@+id/power_state_value"
        app:layout_constraintEnd_toStartOf="@+id/power_state_value"
        app:layout_constraintTop_toTopOf="@+id/power_state_value"
        app:srcCompat="@drawable/ic_battery_80_black_24dp" />

    <TextView
        android:id="@+id/power_state_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="80%"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/label_account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/subject_account_balance"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/text_balance_btc"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints=""
        android:ems="10"
        android:focusable="false"
        android:hint="@string/_numerical_zero"
        android:inputType="numberDecimal"
        android:textAlignment="viewEnd"
        android:textIsSelectable="false"
        app:layout_constraintEnd_toStartOf="@+id/label_equal"
        app:layout_constraintTop_toBottomOf="@+id/label_account_balance"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/label_btc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/_currency_btc"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@+id/text_balance_btc"
        app:layout_constraintTop_toBottomOf="@+id/text_balance_btc" />

    <TextView
        android:id="@+id/label_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/_symbol_equal"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/text_balance_btc"
        app:layout_constraintEnd_toStartOf="@+id/text_balance_fiat"
        app:layout_constraintTop_toTopOf="@+id/text_balance_btc" />

    <EditText
        android:id="@+id/text_balance_fiat"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:autofillHints=""
        android:ems="10"
        android:focusable="false"
        android:hint="@string/_numerical_zero"
        android:inputType="numberDecimal"
        android:textAlignment="viewEnd"
        android:textIsSelectable="false"
        app:layout_constraintBottom_toBottomOf="@+id/text_balance_btc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_balance_btc"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/label_fiat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency_twd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="@+id/text_balance_fiat"
        app:layout_constraintTop_toBottomOf="@+id/text_balance_fiat" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/subject_note"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toStartOf="@+id/user_note_context"
        app:layout_constraintTop_toTopOf="@+id/user_note_context" />

    <EditText
        android:id="@+id/user_note_context"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:autofillHints=""
        android:ems="10"
        android:focusable="false"
        android:gravity="start|top"
        android:imeOptions="actionUnspecified"
        android:inputType="textMultiLine|textNoSuggestions"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btc_address_qrcode"
        app:layout_constraintStart_toStartOf="@+id/btc_address_qrcode"
        tools:targetApi="o" />

    <ImageView
        android:id="@+id/btc_address_qrcode"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/btc_qr_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_btc"
        app:srcCompat="@drawable/ic_scan_qrcode_foreground" />

    <TextView
        android:id="@+id/btc_address_context"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="34"
        android:text="1LG9fDp3do4X2tEf4k7V4uCYhNUmSq6vL8"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btc_address_qrcode" />

    <ImageView
        android:id="@+id/icon_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@android:string/copyUrl"
        app:layout_constraintEnd_toEndOf="@+id/btc_address_context"
        app:layout_constraintStart_toStartOf="@+id/btc_address_context"
        app:layout_constraintTop_toBottomOf="@+id/btc_address_context"
        app:srcCompat="@drawable/ic_content_copy_black_24dp" />

    <ImageView
        android:id="@+id/icon_mint_information"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/mint_inforamtion"
        app:layout_constraintStart_toEndOf="@+id/user_note_context"
        app:layout_constraintTop_toTopOf="@+id/user_note_context"
        app:srcCompat="@drawable/ic_info_outline_black_24dp" />

</android.support.constraint.ConstraintLayout>