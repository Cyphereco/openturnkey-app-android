<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/iv_trans_item_ret_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_trans_item_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_trans_item_date"
        app:srcCompat="@drawable/ic_unconfirmed" />

    <TextView
        android:id="@+id/tv_trans_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_trans_item_time"
        app:layout_constraintStart_toEndOf="@+id/iv_trans_item_ret_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_trans_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_trans_item_date"
        app:layout_constraintStart_toStartOf="@+id/tv_trans_item_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_trans_item_date" />

    <TextView
        android:id="@+id/tv_trans_item_from_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toTopOf="@+id/iv_trans_item_to_icon"
        app:layout_constraintStart_toEndOf="@+id/tv_trans_item_date"
        app:layout_constraintTop_toTopOf="@+id/tv_trans_item_date" />

    <TextView
        android:id="@+id/tv_trans_item_to_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="@+id/iv_trans_item_to_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_trans_item_to_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_trans_item_to_icon" />

    <ImageView
        android:id="@+id/iv_trans_item_to_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_subdirectory_arrow_right_black_24dp"
        android:tint="@color/colorForeground"
        app:layout_constraintBottom_toBottomOf="@+id/tv_trans_item_time"
        app:layout_constraintStart_toStartOf="@+id/tv_trans_item_from_addr"
        app:layout_constraintTop_toBottomOf="@+id/tv_trans_item_from_addr" />

    <TextView
        android:id="@+id/tv_trans_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:maxEms="10"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/tv_trans_item_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_trans_item_date" />
</android.support.constraint.ConstraintLayout>